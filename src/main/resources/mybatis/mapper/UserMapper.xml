<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tcp.iamlazy.user.repository.UserMapper">


  <insert id="insertUser">

    insert into `user`
    (userKakaoID, userName, userImage)
    values
    (#{userKakaoID},
    #{userName},
    #{userImage});

  </insert>
  <select id="isUserExist" resultType="com.tcp.iamlazy.user.entity.User">

    select
        userIdx as userIdx,
        userKakaoID,
        userName,
        userImage
    from `user` as u
    where u.userName = #{userName}

  </select>

</mapper>